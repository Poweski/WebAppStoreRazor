@page
@model Lab12.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Categories) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-page="/Categories/Edit" asp-route-id="@item.Id" class="btn btn-primary" style="width: 80px;">Edit</a>
                <a asp-page="/Categories/Details" asp-route-id="@item.Id" class="btn btn-success" style="width: 80px;">Details</a>
                <a asp-page="/Categories/Delete" asp-route-id="@item.Id" class="btn btn-danger" style="width: 80px;">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="text-center mt-3">
    <a asp-page="/Categories/Create" class="btn btn-success mt-3">Create New Category</a>
</div>