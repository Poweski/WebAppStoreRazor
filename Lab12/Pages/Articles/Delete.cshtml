@page
@model Lab12.Pages.Articles.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<h4>Are you sure you want to delete this article?</h4>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Model.Article.Name
        </dd>
        <dt class = "col-sm-2">
            Price
        </dt>
        <dd class = "col-sm-10">
            @Model.Article.Price
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Model.CategoryName
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            @if (Model != null && !string.IsNullOrEmpty(Model.Article.ImagePath))
            {
                <img src="@Model.Article.ImagePath" alt="Image not available" style="max-width: 200px; max-height: 200px;" />
            }
            else
            {
                <p>No image available</p>
            }
        </dd>
    </dl>
</div>

<div>
    <form style="width: 190px;" method="post" action="@Url.Action("Delete", new { id = Model.Article.Id })">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger btn-spacing margin-top" style="width: 150px;">Delete</button>
    </form>
</div>

<div>
    <a asp-page="/Store/Index" class="btn btn-primary margin-top" style="width: 150px;">Back to List</a>
</div>
