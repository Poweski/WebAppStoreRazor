@page
@model Lab12.Pages.Articles.DetailsModel

@{
    ViewData["Title"] = "Article Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Article.Name
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            $@Model.Article.Price
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Model.CategoryName
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Article.ImagePath))
            {
                <img src="@Model.Article.ImagePath" alt="Image not available" style="max-width: 200px; max-height: 200px;" />
            }
            else
            {
                <p>No image available</p>
            }
        </dd>
    </dl>
</div>

@if (User.IsInRole("Admin"))
{
    <div>
        <a asp-page="/Articles/Edit" asp-route-id="@Model.Article.Id" class="btn btn-success btn-spacing margin-top" style="width: 150px;">Edit</a>
    </div>
}

<div>
    <a asp-page="/Store/Index" class="btn btn-primary margin-top" style="width: 150px;">Back to List</a>
</div>
